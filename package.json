{
  "name": "image_handling_microservice",
  "version": "1.0.0",
  "description": "Image Handling Microservice",
  "author": "Aleksey Mykhailenko",
  "license": "MIT",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "yarn build && node dist/server/index.js",
    "build": "ts-node build.ts && tsc",
    "dev": "nodemon src/server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" src/server/index.ts | pino-pretty",
    "lint": "eslint -c .eslintrc.js \"./src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint -c .eslintrc.js \"./src/**/*.{js,ts,tsx}\" --fix",
    "prettier": "prettier --write './{*,**/*}.{js,ts}'",
    "test": "jest '.*\\.unit\\.spec\\.ts$' --silent --detectOpenHandles --coverage --coverageDirectory=./coverage",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "yarn lint"
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-openapi-validator": "^4.13.8",
    "firebase-admin": "^11.9.0",
    "firebase-functions": "^4.4.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^7.8.1",
    "redoc": "^2.0.0",
    "redoc-express": "^2.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.21",
    "@types/pino": "^7.0.4",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.15",
    "pino-pretty": "^7.5.3",
    "prettier": "^2.5.1",
    "shelljs": "^0.8.5",
    "supertest": "^6.1.6",
    "testdouble": "^3.18.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": "18"
  }
}
